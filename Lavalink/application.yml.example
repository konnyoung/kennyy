server:
  port: 2333
  address: 0.0.0.0

lavalink:
  server:
    password: "YOUR_LAVALINK_PASSWORD"
    
    # Audio quality settings
    bufferDurationMs: 400
    frameBufferDurationMs: 5000
    opusEncodingQuality: 10
    resamplingQuality: HIGH
    trackStuckThresholdMs: 10000
    useSeekGhosting: true
    youtubePlaylistLoadLimit: 100
    playerUpdateInterval: 1
    youtubeSearchEnabled: true
    soundcloudSearchEnabled: true
    gc-warnings: true

    # ==========================================
    # Audio Sources
    # ==========================================
    sources:
      youtube: false      # IMPORTANT: Disable native YouTube (use plugin instead)
      bandcamp: true
      soundcloud: true
      twitch: true
      vimeo: true
      http: true
      local: false

    # ==========================================
    # IPv6 Rotation Configuration (Optional)
    # ==========================================
    # Uncomment and configure if you have an IPv6 /64 block
    # See IPV6_ROTATION_SETUP.md for full setup guide
    #
    # ratelimit:
    #   ipBlocks:
    #     - "YOUR_IPV6_BLOCK::/64"    # Example: "2001:db8:1234:5678::/64"
    #   strategy: "RotatingNanoSwitch"
    #   searchTriggersFail: true
    #   retryLimit: -1
    #   # excludedIps: []  # Individual IPs only, no CIDR

# ==========================================
# Plugins Configuration
# ==========================================
plugins:
  # YouTube Plugin (recommended over native source)
  # https://github.com/lavalink-devs/youtube-source
  youtube:
    enabled: true
    allowSearch: true
    allowDirectVideoIds: true
    allowDirectPlaylistIds: true
    
    # Client priority order (ANDROID_VR works best for most cases)
    clients:
      - ANDROID_VR
      - MUSIC
      - TVHTML5EMBEDDED
      - TV
    
    # OAuth Configuration (recommended to avoid rate limits)
    # Get refresh token: https://github.com/lavalink-devs/youtube-source#oauth
    oauth:
      enabled: false                    # Set to true after getting refresh token
      refreshToken: "YOUR_REFRESH_TOKEN"

  # LavaSrc Plugin (Spotify, Deezer, Apple Music, etc.)
  # https://github.com/topi314/LavaSrc
  lavasrc:
    providers:
      - "ytsearch:\"%ISRC%\""
      - "ytsearch:%QUERY%"
    
    sources:
      spotify: true
      applemusic: false
      deezer: false
      yandexmusic: false
      flowerytts: false
      youtube: false    # Use youtube-source plugin instead
    
    # Spotify Configuration
    spotify:
      clientId: "YOUR_SPOTIFY_CLIENT_ID"
      clientSecret: "YOUR_SPOTIFY_CLIENT_SECRET"
      countryCode: "US"
      playlistLoadLimit: 100
      albumLoadLimit: 50
      resolveArtistsInSearch: true
      localFiles: false

  # Lyrics Plugin (optional)
  # https://github.com/topi314/LavaLyrics
  lyrics:
    sources:
      - spotify
      - youtube
      - deezer

# ==========================================
# Logging Configuration
# ==========================================
logging:
  file:
    path: ./logs/
  
  level:
    root: INFO
    lavalink: INFO
    dev.lavalink.youtube: DEBUG    # Useful for debugging YouTube issues
  
  request:
    enabled: true
    includeClientInfo: true
    includeHeaders: false
    includeQueryString: true
    includePayload: true
    maxPayloadLength: 10000

  logback:
    rollingpolicy:
      max-file-size: 50MB
      max-history: 30

# ==========================================
# Sentry Error Tracking (Optional)
# ==========================================
# sentry:
#   dsn: "YOUR_SENTRY_DSN"
#   environment: "production"
#   tags:
#     service: lavalink

# ==========================================
# Metrics (Optional)
# ==========================================
metrics:
  prometheus:
    enabled: false
    endpoint: /metrics
